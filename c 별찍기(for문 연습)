# c-study

#include <stdio.h>

int main() {
	int num;
	int i, j;

	scanf("%d", &num);//높이
	
	//직각삼각형
	printf("\n직각삼각형\n");
	for (i = 0; i < num; i++) {
		for (j = 0; j <= i; j++) printf("*");
		printf("\n");
	}
	//직각삼각형(상하 반전)
	printf("\n직각삼각형(상하 반전)\n");
	for (i = 0; i < num; i++) {
		for (j = num; j > i; j--) printf("*");
		printf("\n");
	}
	//직각삼각형(좌우 반전)
	printf("\n직각삼각형(좌우 반전)\n");
	for (i = 0; i < num; i++) {
		for (j = num; j > i + 1; j--) printf(" ");
		for (j = 0; j <= i; j++)printf("*");
		printf("\n");
	}
	//직각삼각형(상하좌우 반전)
	printf("\n직각삼각형(상하좌우 반전)\n");
	for (i = 0; i < num; i++) {
		for (j = 0; j < i; j++) printf(" ");
		for (j = num; j > i; j--) printf("*");
		printf("\n");
	}
	//피라미드
	printf("\n피라미드\n");
	for (i = 1; i <= num; i++) {
		for (j = num; j > i; j--) printf(" ");
		for (j = 1; j < 2 * i; j++) printf("*");
		printf("\n");
	}
	printf("\n역피라미드\n");
	for (i = 0; i < num; i++) {
		for (j = 0; j < i; j++) printf(" ");
		for (j = 1; j < 2 * (num - i); j++)printf("*");
		printf("\n");
	}
	//모래시계
	printf("\n모래시계\n");
	for (i = 0; i < num; i++) {
		for (j = 0; j < i; j++) printf(" ");
		for (j = 1; j < 2 * (num - i); j++)printf("*");
		printf("\n");
	}	
	for (i = 2; i <= num; i++) {
		for (j = num; j > i; j--) printf(" ");
		for (j = 1; j < 2 * i; j++) printf("*");
		printf("\n");
	}
	return 0;
}
